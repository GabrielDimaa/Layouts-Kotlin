<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".MainActivity">

                <ImageView
                    android:id="@+id/imagPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/editText1"
                    style="@style/campoPergunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Nome" />

                <EditText
                    android:id="@+id/editText2"
                    style="@style/campoResposta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Afonstina da Silva"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/editText3"
                    style="@style/campoPergunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Email" />

                <EditText
                    android:id="@+id/editText4"
                    style="@style/campoResposta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="afonstinasilva@gmail.com" />

                <TextView
                    android:id="@+id/editText5"
                    style="@style/campoPergunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Idade" />

                <EditText
                    android:id="@+id/editText6"
                    style="@style/campoResposta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="18 anos" />

                <TextView
                    android:id="@+id/editText7"
                    style="@style/campoPergunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Sexo" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <RadioButton
                        android:id="@+id/radioButton6"
                        android:layout_width="140dp"
                        android:layout_height="47dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="36dp"
                        android:text="Masculino" />

                    <RadioButton
                        android:id="@+id/radioButton7"
                        android:layout_width="140dp"
                        android:layout_height="47dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="36dp"
                        android:text="Feminino" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/editText8"
                    style="@style/campoPergunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Bio" />

                <EditText
                    android:id="@+id/editText9"
                    style="@style/campoResposta"
                    android:layout_width="346dp"
                    android:layout_height="68dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Gosto de beterraba"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/editText10"
                    style="@style/campoPergunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Distância máxima do seu local" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_done_black_24dp" />

</RelativeLayout>
